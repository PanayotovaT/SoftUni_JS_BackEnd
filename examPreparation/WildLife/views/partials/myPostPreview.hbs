<div class="my-card">
    <div class="card-header">
        <img src="{{image}}" />
    </div>
    <div class="card-body">
        <span class="tag tag-teal">Keyword: {{keyword}}</span>
        <h4>
            Title: {{title}}
        </h4>
        <div class="user">
            <img src="{{image}}" alt="vote" />
            <div class="user-info">
                <h5>Author: {{author.firstName}} {{author.lastName}}</h5>
                <small>Rating of votes: {{rating}}</small>
            </div>
        </div>
    </div>
</div>